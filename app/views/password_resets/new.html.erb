<h1>Forgot password</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :password_reset, local: true, url: password_resets_path) do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, id: :password_reset_email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
