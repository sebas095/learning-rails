<h1>Login</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, local: true, url: login_path) do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, id: :session_email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :password %>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%= form.password_field :password, id: :session_password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :remember_me, class: "checkbox inline" do %>
          <%= form.check_box :remember_me, id: :session_remember_me %>
          <span>Remember me on this computer</span>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.submit 'Log in', class: 'btn btn-primary' %>
      </div>
    <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
